{
  "$schema": "../node_modules/@tauri-apps/cli/schemas/2.0.0/tauri-app.schema.json",
  "productName": "upmemo",
  "version": "0.1.3",
  "identifier": "com.tauri.upmemo",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "UpMemo",
        "width": 300,
        "height": 250,
        "decorations": false,
        "alwaysOnTop": true,
        "visible": false,
        "dragDropEnabled": true,
        "transparent": true,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "core:window:allow-start-dragging",
            "core:window:allow-show",
            "core:window:allow-hide",
            "core:window:allow-set-focus",
            "core:window:allow-is-visible",
            "core:window:allow-current-monitor",
            "core:window:allow-available-monitors",
            "core:webview:allow-create-webview-window",
            "core:event:allow-emit",
            "core:event:allow-listen",
            "shell:allow-open",
            "store:allow-load",
            "store:allow-save",
            "store:allow-get",
            "store:allow-set",
            "store:allow-delete",
            "store:allow-clear",
            "store:default"
          ]
        },
        {
          "identifier": "sticky-note-capability",
          "windows": ["sticky_*"],
          "permissions": [
            "core:default",
            "core:window:allow-start-dragging",
            "core:window:allow-show",
            "core:window:allow-hide",
            "core:window:allow-set-focus",
            "core:window:allow-is-visible",
            "core:window:allow-close",
            "shell:allow-open",
            "store:allow-load",
            "store:allow-save",
            "store:allow-get",
            "store:allow-set",
            "store:allow-delete",
            "store:allow-clear",
            "store:default"
          ]
        },
        {
          "identifier": "image-preview-capability",
          "windows": ["image-preview"],
          "permissions": [
            "core:default",
            "core:window:allow-close",
            "core:window:allow-show",
            "core:window:allow-set-focus",
            "core:window:allow-set-fullscreen",
            "core:event:allow-listen",
            "core:event:allow-emit"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
